<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">

    <!-- ################ BLOQUE A ##################### -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsuariosAppFaq"
            android:text="@string/usuariosAppFaq"
            android:layout_weight="0.8"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:src="@drawable/teacher_luis_pointing_down"
            android:id="@+id/imgSearchFaq"
            android:layout_weight="1.2" />

    </LinearLayout>

    <!-- ################ SUB BLOQUE A1 ##################### -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtUsuariosAppFaq2"
            android:text="@string/usuariosAppFaq2"
            android:layout_weight="1"
            />

    </LinearLayout>

    <!-- ################ BLOQUE B ##################### -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="2">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtCreacionPruebaFaq"
                android:text="@string/creacionPruebaFaq"
            android:layout_weight="0.6" />

            <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:src="@drawable/create_back"
            android:layout_weight="1.4"/>

        </LinearLayout>

    <!-- ################ BLOQUE C ##################### -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:weightSum="2">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/reports_back"
            android:layout_weight="1.2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtReportesAppFaq"
            android:text="@string/reportesAppFaq"
            android:layout_weight="0.8" />

    </LinearLayout>

    <!-- ################ BLOQUE D ##################### -->

    <!-- ################ BLOQUE E ##################### -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:weightSum="2">

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

            android:id="@+id/txtStoreAppFaq"
            android:text="@string/storeAppFaq"
            android:layout_weight="1"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/store_backphone"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

</LinearLayout>
</ScrollView>