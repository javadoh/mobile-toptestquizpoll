<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/primary_text_default_material_dark"
android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.javadoh.toptestquiz.activities.pruebas.PruebaDespedida">

<ImageView
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:src="@drawable/logo"
    android:layout_marginTop="10dp"/>

<TextView android:text="@string/msg_despedida"
    android:layout_width="match_parent"
    android:textStyle="bold"
    android:textSize="18dp"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/msg_notafinal"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="40dp"
        android:gravity="center"
        android:textColor="@color/textError"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />


<Button
    android:id="@+id/FinalizarTest"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/colorSecondaryText"
    android:textSize="18sp"
    android:layout_marginTop="30dp"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:layout_marginBottom="10dp"
    android:text="@string/btnFinTest"
    android:background="@color/textError"/>
</LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adBannerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/adbanner"
        android:layout_alignParentBottom="true">
    </com.google.android.gms.ads.AdView>
</RelativeLayout>

