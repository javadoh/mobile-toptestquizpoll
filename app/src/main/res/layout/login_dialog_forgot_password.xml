<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background_secondary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleHelpPass"
            android:text="@string/dialogoOlvidoPassTitle"
            android:gravity="center_horizontal"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/textError"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subTitleOlvidoPass"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:id="@+id/subtitleHelpPass"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hintEmailOlvidoPass"
            android:id="@+id/txtEmailRecoverPass"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msgResponseEmailSend"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</LinearLayout>